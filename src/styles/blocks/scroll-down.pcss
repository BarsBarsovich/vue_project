.scroll-down-btn {
    display: inline-block;
    display: flex;
    align-items: center;
    font-size: 18px;
    font-weight: 600;
    text-decoration: none;
    background-color: transparent;
    color: #fff;
  
    &:after {
      content: "";
      display: block;
      background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
      width: 20px;
      height: 22px;
      margin-left: 25px;
    }
  
  }
  